<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.widsons.pklproj.MainActivity">
    <ListView
        android:layout_below="@id/button_list_tipe1"
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:text="Delete"
        android:id="@+id/button_list_tipe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ToggleButton
        android:layout_toEndOf="@+id/button_list_tipe1"
        android:textOff="View"
        android:textOn="Delete"
        android:id="@+id/toggle_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
